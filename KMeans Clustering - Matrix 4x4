# Create a 4x4 matrix
data <- matrix(c(2,4,6,8,
                 3,5,7,9,
                 4,6,8,10,
                 1,3,5,7), 
               nrow=4, byrow=TRUE)

# Perform K-Means clustering (2 clusters)
set.seed(123)
km <- kmeans(data, centers=2)

# Display results
print(km$cluster)
print(km$centers)

# Visualize clusters
plot(data, col=km$cluster, pch=19, main="K-Means Clustering")
points(km$centers, col=1:2, pch=8, cex=2)
